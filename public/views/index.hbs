<title>{{title}}</title>

<div class="container-fluid bg-light p-2 border border-1">
    <div class="d-flex justify-content-evenly align-items-center ">
        <div class="fs-3 text-success">Bienvenido <span class="text-primary fw-semibold fs-4 ">{{user}}</span>
            <img src="{{userAvatar}}" alt="thumbnail" class="rounded-pill" width="75px">
        </div>
        <div>
            <a class="btn btn-success" href="/productos">Home</a>
            <a class="btn btn-primary" href="/user">Perfil</a>
            <a class="btn btn-outline-primary" href="/chat">CHAT</a>
            <a class="btn btn-warning" href="/user/carrito">Carrito</a>
        </div>
        <button class="btn btn-outline-danger" id="btnLogout">Logout</button>
    </div>
</div>
{{#if isAdmin}}
<h2 class="text-center mt-3 text-primary">Admin form <span class="text-secondary">(new prod)</h2>
<div class="container mt-4 bg-light p-2 border">
    <form action="/productos" enctype="application/x-www-form-urlencoded" method="POST" id="ingresarProducto">
        <div class="mb-5">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" required>
            <label for="stock" class="form-label">Stock</label>
            <input type="number" class="form-control" id="stock" name="stock" min="1" max="500" required>
            <label for="categoria" class="form-label">Categoria</label>
            <input type="text" class="form-control" id="categoria" name="categoria" required>
            <label for="precio" class="form-label">Precio</label>
            <input type="number" class="form-control" id="precio" name="precio" step="0.01" required>
            <label for="foto" class="form-label">Foto URL</label>
            <input type="url" class="form-control" id="foto" name="foto" required>
            <label for="descripcion" class="form-label">Descripci√≥n</label>
            <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary me-3">Cargar producto</button>
    </form>
</div>
{{/if}}

<div id="productos"></div>


{{>footer}}

<script defer src="../js/index.js"></script>
{{#if isAdmin}}
<script defer src="../js/products-isAdmin.js"></script>
{{/if}}